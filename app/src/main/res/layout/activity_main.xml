<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E439BD6"
    android:backgroundTint="#229C4F"
    android:backgroundTintMode="screen"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="206dp"
        android:layout_height="173dp"
        android:text="Calculo de Soma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.693" />

    <Button
        android:id="@+id/valor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor1"
        app:layout_constraintBottom_toTopOf="@+id/valor2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634"
        tools:layout_editor_absoluteX="14dp" />

    <Button
        android:id="@+id/valor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor2"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="141dp" />

    <Button
        android:id="@+id/valor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="222dp" />

    <Button
        android:id="@+id/somar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="303dp" />

    <TextView
        android:id="@+id/valor1.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toEndOf="@+id/valor1"
        tools:layout_editor_absoluteY="72dp" />

    <TextView
        android:id="@+id/valor2.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toEndOf="@+id/valor2"
        tools:layout_editor_absoluteY="158dp" />

    <TextView
        android:id="@+id/valor3.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toEndOf="@+id/valor3"
        tools:layout_editor_absoluteY="237dp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toEndOf="@+id/somar"
        tools:layout_editor_absoluteY="310dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="28dp"
        android:layout_height="27dp"
        app:srcCompat="@drawable/simbolodemais"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="119dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="28dp"
        app:srcCompat="@drawable/simbolodemais"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="194dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="39dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/simbolodeigual"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="270dp" />

</androidx.constraintlayout.widget.ConstraintLayout>